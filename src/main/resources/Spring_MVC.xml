<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--ssm框架中的SpringMVC的配置文件-->
    <context:component-scan base-package="com.jbit.maplef.controller">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>



    <!--视图解析器-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--配置文件前缀-->
        <property name="prefix" value="/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--配置静态资源的访问-->

    <mvc:default-servlet-handler/>

    <!--开启注解功能-->
    <mvc:annotation-driven/>



    <!--配置文件上传解析器-->
    <!--bean的id属性值必须是:multipartResolver-->
    <bean class="org.springframework.web.multipart.commons.CommonsMultipartResolver" id="multipartResolver">
        <!--配置文件上传的参数-->
        <property name="defaultEncoding" value="UTF-8"></property>  <!--默认的编码格式-->
        <property name="maxUploadSize" value="5242880" ></property> <!--所有文件的总大小,单位:字节(5*1024*1024)-->
        <property name="maxInMemorySize" value="40960"/>             <!--设定文件上传时,写入内存的最大值,如果小于设置的值,不会生成临时文件,默认值为1024-->

    </bean>

</beans>